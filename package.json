{
  "name": "@uplora/serializer",
  "type": "module",
  "version": "0.1.3",
  "packageManager": "pnpm@10.30.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uplora/serializer.git"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "release": "pnpm build && changelogen --release --push && pnpm publish --access public",
    "build": "unbuild",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test:deps": "madge --circular --extensions ts ./src",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "prepare": "husky"
  },
  "dependencies": {
    "@uplora/formats": "^0.1.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.4.3",
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "changelogen": "^0.6.2",
    "eslint": "^9.39.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "madge": "^8.0.0",
    "typescript": "^5.9.3",
    "unbuild": "^3.6.1"
  },
  "lint-staged": {
    "*.ts": "pnpm run lint"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
